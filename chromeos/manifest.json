{
  "manifest_version": 3,
  "name": "EDAMAME System Helper",
  "version": "1.0",
  "permissions": ["system.cpu", "system.memory", "system.storage", "management", "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
